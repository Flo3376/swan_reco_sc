<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="light_off" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
	<rule id="light_off" scope="public">
		<tag>out.action=new Object(); </tag>
		<item>SWAN</item>
		<!--Coupe les éclairages-->
		<one-of>
			<item>éteint les phares</item>
			<item>éteint les feux</item>
			<item>éteint les spots</item>
			<item>coupe les phares</item>
			<item>coupe les feux</item>
			<item>coupe les spots</item>
		</one-of>
		<tag>out.action.action="light_off";</tag>
	</rule> 
</grammar>