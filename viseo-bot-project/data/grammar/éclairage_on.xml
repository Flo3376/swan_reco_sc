<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="light_on" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
	<rule id="light_on" scope="public">
		<tag>out.action=new Object(); </tag>
		<item>SWAN</item>
		<!--Allume les éclairages-->
		<one-of>
			<item>on y voit rien</item>
			<item>un peu de lumiére</item>
			<item>allume les phares</item>
			<item>allume les feux</item>
			<item>allumes les spots</item>
			<item>éclair la zone</item>
		</one-of>
		<tag>out.action.action="light_on";</tag>
	</rule> 
</grammar>