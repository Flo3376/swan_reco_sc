<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="switch_to_defensif" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
	<rule id="switch_to_defensif" scope="public">
		<tag>out.action=new Object(); </tag>
		<item>SWAN</item>
		<!--mode défensif triange de puissance vers réacteur et bouclier -->
		<one-of>
			<item>mode défensif</item>  
			<item>passe en mode défensif</item> 
		</one-of>
		<tag>out.action.action="switch_to_defensif";</tag>
	</rule> 
</grammar>